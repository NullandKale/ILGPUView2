  </ItemGroup>

  <ItemGroup>
    <None Update="Assets\suzanne.obj">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="TestImages\Debug.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="TestImages\DebugRT.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
